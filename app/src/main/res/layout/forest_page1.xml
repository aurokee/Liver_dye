<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/id">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="285dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="     You made it into the forest alive. You see some insect on the ground, and see predatory footprints on the ground. You hear agressive howls of baboons. The trees aren&apos;t safe, but neither is the ground. Which way  will you go?"
            android:id="@+id/forest_introduction"
            android:layout_row="5"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="climb the looming forest trees"
            android:id="@+id/trees"
            android:layout_row="6"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stay on the overgrown forest floor"
            android:id="@+id/ground"
            android:layout_row="7"
            android:layout_column="0" />
    </GridLayout>
</LinearLayout>